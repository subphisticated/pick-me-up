<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="Theme.Sherlock">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="light" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="light.Large">
        <item name="android:textSize">24dp</item>
    </style>
    <style name="dark" parent="@style/light">
        <item name="android:layout_marginTop">-9dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="dark.Large">
        <item name="android:textSize">26dp</item>
    </style>
    <style name="dark.Large.Bold">
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <color name="darkGreen1">#839c3a</color>
    <color name="darkGreen2">#5d6f29</color>
    <color name="darkGreen3">#384219</color>
    <color name="mediumGreen">#bbdf53</color>
    <color name="lightGreen1">#d0e987</color>
    <color name="lightGreen2">#ddefa9</color>
    <color name="lightGreen3">#ebf5cc</color>
</resources>
