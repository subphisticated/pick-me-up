<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="Theme.Sherlock">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="light" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="light.Large">
        <item name="android:textSize">24dp</item>
    </style>
    <style name="dark" parent="@style/light">
        <item name="android:layout_marginTop">-9dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="dark.Large">
        <item name="android:textSize">26dp</item>
    </style>
    <style name="dark.Large.Bold">
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <color name="darkGreen">#5500FF00</color>
    <color name="mediumGreen">#9900FF00</color>
    <color name="lightGreen">#CC00FF00</color>
</resources>