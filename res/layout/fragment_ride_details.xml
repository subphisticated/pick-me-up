<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/day"
        android:text="Sa"
    />
    <TextView
        android:id="@+id/date"
        android:layout_toRightOf="@id/day"
        android:text="12. Dez"
    />
    <TextView
        android:id="@+id/time"
        android:layout_toRightOf="@id/date"
        android:text="17:00"
    />

    <TextView
        android:id="@+id/seats"
        android:layout_marginLeft="165dp"
        android:text="3"
    />
    <ImageView
        android:id="@+id/seats_icon"
        android:layout_toRightOf="@id/seats"
        android:src="@drawable/ic_my_rides"
    />
    <TextView
        android:id="@+id/currency"
        android:layout_alignParentRight="true"
        android:text="€"
    />
    <TextView
        android:id="@+id/price"
        android:layout_toLeftOf="@id/currency"
        android:text="24,50"
    />
    
    <TextView
        android:id="@+id/from_place"
        android:layout_below="@id/day"
        android:text="Alte Feuerwache, 68169 Mannheim"
    />
    <View 
        android:id="@+id/line"
        android:layout_height="2dp"
        android:layout_below="@id/from_place"
        android:background="@color/darkGreen"
    />
    <TextView
        android:id="@+id/to"
        android:layout_below="@id/line"
        android:text="Bahnhofstraße, 69469 Weinheim"
    />
    
    

</RelativeLayout>
